@model WebApplicationLabTask1.Models.Login
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2><br />
<div>
    <form action="/Student/Login" method="post">
        <input type="text" name="UserName" class="form-control" placeholder="User Name">
        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })<br />
        <input type="password" name="Password" class="form-control" placeholder="Password">
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })<br />
        <input type="submit" class="btn btn-block" value="Login" />
    </form><br />
    <p class="text-danger">@TempData["Failed"]</p>
</div>