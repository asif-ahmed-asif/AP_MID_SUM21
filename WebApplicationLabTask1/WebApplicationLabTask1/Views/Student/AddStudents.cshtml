@{
    ViewBag.Title = "Add Students";
}
@model WebApplicationLabTask1.Models.Student

<h2>Add Students</h2>
<br />
<div>
    <form action="/Student/AddStudents" method="post">
        Name: <input type="text" name="Name" class="form-control" placeholder="Name">
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })<br />
        DOB: <input type="date" name="DOB" class="form-control">
        @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "text-danger" })<br />
        Credit: <input type="text" name="Credit" class="form-control" placeholder="Credit">
        @Html.ValidationMessageFor(model => model.Credit, "", new { @class = "text-danger" })<br />
        CGPA: <input type="text" name="CGPA" class="form-control" placeholder="CGPA">
        @Html.ValidationMessageFor(model => model.CGPA, "", new { @class = "text-danger" })<br />
        Department: <select class="form-control" name="DeptId">
            <option></option>
            <option value="dp-1">CSE</option>
            <option value="dp-2">BBA</option>
            <option value="dp-3">EEE</option>
            <option value="dp-4">English</option>
        </select>
        @Html.ValidationMessageFor(model => model.DeptId, "", new { @class = "text-danger" })<br />
        <input type="submit" class="btn btn-success" value="Add Sudent" />
    </form>
</div>
<br /><br /><br />
<div>
    <a class="btn btn-info" href="/Student/Dashboard">Dashboard</a><br />
</div>